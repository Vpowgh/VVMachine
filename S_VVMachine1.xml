<?xml version="1.0"?>
<!-- 
S_VVMachine1.xml
Vera plug-in for Vallox MV ventilation machines 
Developed by Vpow 2019
-->
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable sendEvents="yes">
			<name>Profile</name>
			<dataType>string</dataType>
			<shortCode>profile</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>Connected</name>
			<dataType>string</dataType>
			<shortCode>connected</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>ExtractTemperature</name>
			<dataType>float</dataType>
			<shortCode>extracttemp</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>ExhaustTemperature</name>
			<dataType>float</dataType>
			<shortCode>exhausttemp</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>OutdoorTemperature</name>
			<dataType>float</dataType>
			<shortCode>outdoortemp</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>SupplyTemperature</name>
			<dataType>float</dataType>
			<shortCode>supplytemp</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>FanSpeed</name>
			<dataType>int</dataType>
			<shortCode>fanspeed</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>Humidity</name>
			<dataType>int</dataType>
			<shortCode>humidity</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>CellState</name>
			<dataType>int</dataType>
			<shortCode>cellstate</shortCode>
		</stateVariable>
		<stateVariable sendEvents="yes">
			<name>RegisterAddress</name>
			<dataType>int</dataType>
			<shortCode>registeraddress</shortCode>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>SetProfileHome</name>
			<argumentList></argumentList>
		</action>
		<action>
			<name>SetProfileAway</name>
			<argumentList></argumentList>
		</action>
		<action>
			<name>SetProfileBoost</name>
			<argumentList></argumentList>
		</action>
		<action>
			<name>SetProfileFireplace</name>
			<argumentList></argumentList>
		</action>
		<action>
			<name>SetVVMVariable</name>
			<argumentList>
			<argument>
				<name>val</name>
				<direction>out</direction>
				<relatedStateVariable>RegisterAddress</relatedStateVariable>
			</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>